<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SafetyBeacon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_red_light</item>
        <item name="colorPrimaryVariant">@color/primary_red</item>
        <item name="colorOnPrimary">@color/gray_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_blue_light</item>
        <item name="colorSecondaryVariant">@color/secondary_blue</item>
        <item name="colorOnSecondary">@color/gray_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray_900</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/gray_900</item>
        <item name="colorSurface">@color/gray_800</item>
        <item name="colorOnSurface">@color/gray_100</item>
    </style>
</resources>